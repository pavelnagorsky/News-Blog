<%- include ('../partials/header') %>

	<!-- Edit Comment -->
    <div class="container">
      <hr class="hr-footer">
      <div class="container-form">
        <h1 class="form-name"> Edit Comment </h1>
        <form action="/posts/<%= post_id %>/comments/<%= comment._id %>?_method=PUT" method="POST"> 
          <div class="form-group">
            <textarea class="form-control form-description" name="comment[text]" placeholder="Comment" required><%= comment.text %></textarea>
          </div>
          <div class="form-group">
            <button class="btn comment-btn">Submit</button>
          </div>
        </form>
        <a href="/posts/<%= post_id %>">Go Back</a>
      </div>
    </div>

<%- include ('../partials/footer') %>